    {{- $attributes = printf "%s`Expandable`, " $attributes }}
{{- end }}
{{- if $item.FromFile }}
    {{- $attributes = printf "%s`From File`, " $attributes }}
{{- end }}
{{- if $item.EnvSeparator }}
    {{- $attributes = printf "%s`Separated by %s`, " $attributes $item.EnvSeparator }}
{{- end }}
